<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Editing Book</h1>
<% if @book.errors.any? %>  
    <%= @book.errors.count %>error
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>  
    <% end %>  
<% end %>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <span><%= f.text_field :title %></span>
  
 <h4>body</h4>
  <span><%= f.text_area :body %></span>
  
  <%= f.submit 'Update Book' %>
  <span><%= link_to "Show", book_path %></span>
  <span><%= link_to "Back", books_path %></span>
<% end %>